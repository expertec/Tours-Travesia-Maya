<section id="contacto" class="py-20 bg-gradient-to-br from-gray-50 to-amber-50">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
        <span class="text-amber-500">Contáctanos</span>
      </h2>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        Estamos disponibles 24/7, los 365 días del año para ayudarte
      </p>
    </div>

    <div class="grid lg:grid-cols-2 gap-12 max-w-6xl mx-auto">
      <!-- Contact Form -->
      <div class="bg-white rounded-2xl p-8 shadow-xl">
        <h3 class="text-2xl font-bold text-gray-900 mb-6">Envíanos un Mensaje</h3>

        <form class="space-y-6" id="contact-form">
          <div>
            <label for="name" class="block text-gray-700 font-medium mb-2">Nombre Completo</label>
            <input
              type="text"
              id="name"
              name="name"
              required
              class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:border-amber-500 focus:outline-none transition-colors"
              placeholder="Tu nombre"
            />
          </div>

          <div>
            <label for="email" class="block text-gray-700 font-medium mb-2">Correo Electrónico</label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:border-amber-500 focus:outline-none transition-colors"
              placeholder="tu@email.com"
            />
          </div>

          <div>
            <label for="phone" class="block text-gray-700 font-medium mb-2">Teléfono</label>
            <input
              type="tel"
              id="phone"
              name="phone"
              class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:border-amber-500 focus:outline-none transition-colors"
              placeholder="999 123 4567"
            />
          </div>

          <div>
            <label for="service" class="block text-gray-700 font-medium mb-2">Servicio de Interés</label>
            <select
              id="service"
              name="service"
              class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:border-amber-500 focus:outline-none transition-colors"
            >
              <option value="">Selecciona un servicio</option>
              <option value="renta-autos">Renta de Autos</option>
              <option value="traslados">Traslados</option>
              <option value="tours-privados">Tours Privados</option>
              <option value="servicio-disposicion">Servicio a Disposición</option>
              <option value="casas-airbnb">Renta de Casas Airbnb</option>
              <option value="paquetes">Paquetes Todo Incluido</option>
              <option value="otro">Otro</option>
            </select>
          </div>

          <div>
            <label for="message" class="block text-gray-700 font-medium mb-2">Mensaje</label>
            <textarea
              id="message"
              name="message"
              rows="4"
              required
              class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:border-amber-500 focus:outline-none transition-colors resize-none"
              placeholder="Cuéntanos sobre tu viaje o necesidades..."
            ></textarea>
          </div>

          <button
            type="submit"
            class="w-full bg-amber-500 hover:bg-amber-600 text-white px-8 py-4 rounded-full font-semibold text-lg transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl"
          >
            Enviar Mensaje
          </button>
        </form>

        <div id="form-message" class="hidden mt-4 p-4 rounded-lg"></div>
      </div>

      <!-- Contact Information -->
      <div class="space-y-6">
        <!-- Contact Cards -->
        <div class="bg-white rounded-2xl p-6 shadow-lg hover:shadow-xl transition-all duration-300">
          <div class="flex items-start">
            <div class="bg-amber-100 rounded-full p-4 mr-4">
              <svg class="w-6 h-6 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
              </svg>
            </div>
            <div>
              <h4 class="text-lg font-bold text-gray-900 mb-2">Teléfonos</h4>
              <a href="tel:+5219993838600" class="text-amber-500 hover:text-amber-600 font-medium block">999 383 86 00</a>
              <a href="tel:+5219991407652" class="text-amber-500 hover:text-amber-600 font-medium block">999 140 76 52</a>
              <p class="text-gray-600 text-sm mt-2">Disponibles 24/7</p>
